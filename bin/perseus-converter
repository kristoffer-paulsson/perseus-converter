from pathlib import PosixPath
from bs4 import BeautifulSoup


def scanner(path: PosixPath):
    for directory in path.glob("**"):
        for file in directory.glob("*.xml"):
            yield file.resolve()


def xml_opener(xml_file: PosixPath):
    with open(xml_file) as tei:
        xml = BeautifulSoup(tei, "lxml")
        print(xml_file)
        print(xml.title.getText().strip())
        for lang in xml.findAll("language"):
            print(lang.getText(strip=True))
        #print(xml.author.getText().strip())
        print("\n")


if __name__ == '__main__':
    for xml_file in scanner(PosixPath("../data")):
        xml_opener(xml_file)
